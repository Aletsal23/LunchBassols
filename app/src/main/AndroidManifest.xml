<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.alumno_1.lunchbassols">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.DayNight.NoActionBar">
        <activity android:name=".Inicio">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Registro"
            android:parentActivityName=".Inicio">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".Inicio" />
        </activity>
        <activity
            android:name=".RegistroEmpleado"
            android:parentActivityName=".Registro">
            <meta-data
                android:name="andorid.support.PARENT_ACTIVITY"
                android:value=".Registro" />
        </activity>
        <activity
            android:name=".RegistroUsuario"
            android:parentActivityName=".Registro">
            <meta-data
                android:name="andorid.support.PARENT_ACTIVITY"
                android:value=".Registro" />
        </activity>
        <activity
            android:name=".InicioSesion"
            android:parentActivityName=".Inicio">
            <meta-data
                android:name="andorid.support.PARENT_ACTIVITY"
                android:value=".Inicio" />
        </activity>
        <activity
            android:name=".MenuDrawer"
            android:label="Menu Drawer"
            android:theme="@style/Theme.AppCompat.DayNight.NoActionBar" />
        <activity android:name=".Compra" />
        <activity android:name=".Pago"></activity>
    </application>

</manifest>